<header>

        <!-- *** TOP ***
_________________________________________________________ -->
  <div id="top">
      <div class="container">
          <div class="row">
              <div class="col-xs-5 contact">
                  <p class="hidden-sm hidden-xs">Nos contate por <i class="fa fa-whatsapp"></i> +55 41 9693-7334 ou adm@sweetjoy.com.br</p>
                  <p class="hidden-md hidden-lg"><a href="#" data-animate-hover="pulse"><i class="fa fa-whatsapp"></i></a>  <a href="adm@sweetjoy.com.br" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                  </p>
              </div>
              <div class="col-xs-7">
                  <div class="social">
                      <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                      <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                      <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                      <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                  </div>

                  <div class="login">
                      <a href="#" data-toggle="modal" data-target="#login-modal"><i class="fa fa-sign-in"></i> <span class="hidden-xs text-uppercase">Sign in</span></a>
                      <a href="customer-register.html"><i class="fa fa-user"></i> <span class="hidden-xs text-uppercase">Sign up</span></a>
                  </div>

              </div>
          </div>
      </div>
  </div>

        <!-- *** TOP END *** -->

        <!-- *** NAVBAR ***
_________________________________________________________ -->

  <div class="navbar-wagon">
  <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag params[:action] == 'home' ? "logo.png" : "logo.png" %>
    <% end %>

  <!-- Right Navigation -->
    <div class="navbar-wagon-right hidden-xs hidden-sm">


      <!-- Different navigation if login or not -->
      <% if user_signed_in? %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <% if current_user.baker.blank? %>
              <% user_image = 'nophoto.png' %>
            <% else %>
              <% user_image = current_user.baker.photo %>
            <% end %>

            <%= image_tag user_image, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>

            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <% if current_user.baker %>
              <li>
                <%= link_to baker_profile_path(current_user.baker) do %>
                  <i class="fa fa-user"></i> <%= t ".profile", default: "Baker Profile" %>
                <% end %>
              </li>
              <% end %>
              <li>
                <%= link_to root_path do %>
                  <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>

      <% else %>

        <!-- Login text link -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn btn-default" %>

      <% end %>

      <!-- Button (call-to-action) -->

      <% if user_signed_in? %>

        <% if current_user.baker.blank? %>
          <%= link_to t(".top_call_to_action", default: "Become a Baker"), new_baker_path, class: "btn btn-default" %>
        <% end %>
        <% if current_user.orders.present? %>
          <%= link_to t(".top_call_to_action", default: ""), order_path(current_user.orders.last), class: "glyphicon glyphicon-shopping-cart fa-2x" %>
        <% end %>
      <% end %>

    </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>hover
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>



        <!-- *** NAVBAR END *** -->

    </header>

    <!-- *** LOGIN MODAL ***
_________________________________________________________ -->

    <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
        <div class="modal-dialog modal-sm">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="Login">Customer login</h4>
                </div>
                <div class="modal-body">
                    <form action="customer-orders.html" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" id="email_modal" placeholder="email">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password_modal" placeholder="password">
                        </div>

                        <p class="text-center">
                            <button class="btn btn-template-main"><i class="fa fa-sign-in"></i> Log in</button>
                        </p>

                    </form>

                    <p class="text-center text-muted">Not registered yet?</p>
                    <p class="text-center text-muted"><a href="customer-register.html"><strong>Register now</strong></a>! It is easy and done in 1&nbsp;minute and gives you access to special discounts and much more!</p>

                </div>
            </div>
        </div>
    </div>

    <!-- *** LOGIN MODAL END *** -->

